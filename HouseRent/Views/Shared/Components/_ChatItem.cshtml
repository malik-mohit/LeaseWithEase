@model dynamic

@{
    var inqueries = Url.Action("InqueryCustomerList", "Owner", new { propertyid = Model.propertyid });
    string currentUrl = ViewContext.HttpContext.Request.Path + ViewContext.HttpContext.Request.QueryString;
}
<style>
    .user-item {
        display: flex;
        align-items: center;
        height: 100px;
        padding-inline: 3rem;
        background-color: white;
    }

    .user-info-cont {
        display: flex;
        align-items: center;
        gap: 1rem;
        flex: 2;
    }

    .user-item-info {
        display: flex;
        flex-direction: column;
    }

    .user-profile {
        width: 64px;
        height: 64px;
        background-image: url("/assets/opro1.jpg");
        background-size: cover;
        border-radius: 50%;
    }

    .username {
        font-weight: 700;
    }

    .user-action {
        display: flex;
        align-items: center;
        flex: 1;
        justify-content: space-between;
    }

    .action-icon-cont {
        display: flex;
        gap: 4rem;
    }

    .action-icon {
        font-size: 2rem;
    }

</style>
<div class="user-item" id="item-@Model.customer.CustomerId">
    <div class="user-info-cont">
        <div class="user-profile">
        </div>
        <div class="user-item-info">
            <div class="username">@Model.customer.Name</div>
            <div>@Model.customer.Email</div>


        </div>
    </div>



</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
<script>



    $('#item-@Model.customer.CustomerId').on('click', function () {

        if ('@currentUrl' == '@inqueries'){
            window.location.href = '/Owner/InqueryofCustomer?propertyid=' + @Model.propertyid + '&customerId=' + @Model.customer.CustomerId;
            
        }
    });



</script>