@model Model.FormModel;

<div style="width:500px; height:500px; background-color:white; display:flex;justify-content:center;align-items:center;">
    <form asp-action="BlockProperty" asp-controller="Admin" style="display:flex;flex-direction:column; width:80%; gap:1.5rem " >
        <label>Add Comment</label>
        <textarea asp-for="Comment" rows="5" style="resize:none"></textarea>
        <input asp-for="PropertyId" value="@Model.PropertyId" hidden/>
        <button type="submit" style="padding:1rem; background-color:red">Block</button>
    </form>
</div>